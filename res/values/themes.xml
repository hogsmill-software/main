<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FrameText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="plainBlue" parent="Theme.FrameText">
        <item name="android:textColor">@color/plainBlue</item>
    </style>

    <style name="popupBackground" parent="Theme.FrameText">
        <item name="android:background">@color/white</item>
    </style>

    <style name="pinkMagenta" parent="Theme.FrameText">
        <item name="android:background">@color/pinkMagenta</item>
        <item name="android:backgroundTint">@color/pinkMagenta</item>
    </style>

    <style name="pinkMagentaTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/pinkMagenta</item>
    </style>

    <style name="pinkMagentaButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/pinkMagenta</item>
        <item name="android:backgroundTint">@color/pinkMagenta</item>
    </style>

    <style name="yellowInfoButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/yellow</item>
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

</resources>